<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
  	<select id="getUserById" resultType="com.example.demo.pojo.User">
		select * from user where user_id=#{id}
  	</select>

    <select id="updateUser" parameterType="com.example.demo.pojo.User">
        update user set
        nickname=#{nickname},
        username=#{username},
        email=#{email},
        password=#{password},
        usertype=#{usertype},
        telephone=#{telephone}
        where user_id=#{user_id}
    </select>

    <select id="deleteUserById">
        delete from user where user_id=#{id}
    </select>

    <select id="insertUser" useGeneratedKeys="true" parameterType="com.example.demo.pojo.User">
        insert into user(nickname,username,password,email,usertype,telephone)
        values(#{nickname},#{username},#{password},#{email},#{usertype},#{telephone})
    </select>
</mapper>